{
  "name": "@soliguide/soligare",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "AGPL-3.0-only",
  "scripts": {
    "build": "nest build",
    "format:fix": "prettier --cache -w .",
    "format": "prettier --cache -c .",
    "start": "nest start",
    "watch": "nest start --watch",
    "watch:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint:fix": "eslint --cache ./src --fix",
    "lint": "eslint --cache ./src",
    "license:add": "license-check-and-add add -f license.config.json -r $(date +%Y)",
    "license:check": "license-check-and-add check -f license.config.json -r $(date +%Y)",
    "license:remove": "license-check-and-add remove -f license.config.json -r $(date +%Y)",
    "test": "ENV=test jest --testTimeout=15000",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@fastify/static": "^8.0.4",
    "@fastify/swagger": "^9.4.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.3",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.3",
    "@nestjs/platform-fastify": "^11.0.3",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/terminus": "^10.2.3",
    "@sentry/nestjs": "^8.50.0",
    "@sentry/node": "^8.50.0",
    "@sentry/wizard": "^3.38.0",
    "@soliguide/common": "workspace:*",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "joi": "^17.13.3",
    "nestjs-pino": "^4.3.0",
    "pino-http": "^10.4.0",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^5.1.1",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/type-utils": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "license-check-and-add": "^4.0.5",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "webpack": "^5.93.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "cobertura"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
